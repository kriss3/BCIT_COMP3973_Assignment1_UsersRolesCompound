@model ZenithWeb.Models.CalculatorData

@{
	ViewData["Title"] = "Calculate Compound Interest Rate";
}
<h2>Calculator Results</h2>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Calculate">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Principal" class="control-label"></label>
				<input asp-for="Principal" class="form-control text-danger" readonly="readonly" />
				<span asp-validation-for="Principal" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="InterestRate" class="control-label"></label>
				<input asp-for="InterestRate" class="form-control text-danger"  readonly="readonly"/>
				<span asp-validation-for="InterestRate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="NoOfTimesInterestComp" class="control-label"></label>
				<input asp-for="NoOfTimesInterestComp" class="form-control text-danger" readonly="readonly"/>
				<span asp-validation-for="NoOfTimesInterestComp" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Time" class="control-label"></label>
				<input asp-for="Time" class="form-control text-danger" readonly="readonly" />
				<span asp-validation-for="Time" class="text-danger"></span>
			</div>

			<hr />
			<div class="form-group">
				<label asp-for="CalcResults" class="control-label"></label>
				<input asp-for="@Model.CalcResults" readonly="readonly" class="form-control text-danger"  />
			</div>
			<hr />
			
		</form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Calculate Again</a>
</div>

