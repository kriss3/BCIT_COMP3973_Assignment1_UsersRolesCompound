@model ZenithWeb.Models.CalculatorData


<h2>@ViewData["Title"]</h2>

@{
	ViewData["Title"] = "Calculate";
}

<h4>Calculator Data</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Calculate">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Principal" class="control-label"></label>
				<input asp-for="Principal" class="form-control" />
				<span asp-validation-for="Principal" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="InterestRate" class="control-label"></label>
				<input asp-for="InterestRate" class="form-control" />
				<span asp-validation-for="InterestRate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="NoOfTimesInterestComp" class="control-label"></label>
				<input asp-for="NoOfTimesInterestComp" class="form-control" />
				<span asp-validation-for="NoOfTimesInterestComp" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Time" class="control-label"></label>
				<input asp-for="Time" class="form-control" />
				<span asp-validation-for="Time" class="text-danger"></span>
			</div>
				
			<div class="form-group">
				<input type="submit" value="Calculate" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>